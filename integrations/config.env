# GitHub Integration Configuration
# Configure how the browser agent integrates with GitHub Actions

# Default target repository for issue scanning
DEFAULT_TARGET_REPO=Caleb-Hurst/bernard_browser_agent

# GitHub issue label to trigger testing
ISSUE_LABEL=needs-test

# Browser agent configuration for CI
HEADLESS_MODE=true
TEST_TIMEOUT=300

# LLM Provider (will fallback to available API keys)
LLM_PROVIDER=openai

# Test scenario generation settings
MAX_SCENARIO_TOKENS=500
MAX_ANALYSIS_TOKENS=400

# Browser test settings
SCREENSHOT_ON_FAILURE=true
VERBOSE_LOGGING=true